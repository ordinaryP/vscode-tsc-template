{
    "name": "node-js-with-ts",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "predev": "rm -rf public/development/ && mkdir -p public/development/ && cp package.json public/development/package.json",
        "dev": "./node_modules/.bin/tsc --watch --sourceMap --outDir ./public/development/src",
        "prebuild": "rm -rf public/production/ && mkdir -p public/production/ && cp package.json public/production/package.json",
        "build": "npm run build-clear-copy && ./node_modules/.bin/tsc --outDir ./public/production/src",
        "start-pro": "cross-env  NODE_ENV=production PORT=443 node ./src/app.js",
        "start-dev": "cross-env  NODE_ENV=development PORT=3000 node ./src/app.js"
    },
    "author": "xuhuihuang",
    "license": "ISC",
    "dependencies": {
        "@types/jsonwebtoken": "^8.3.5",
        "@types/koa": "^2.11.0",
        "@types/koa-jwt": "^3.3.0",
        "@types/koa-logger": "^3.1.1",
        "@types/koa-router": "^7.0.42",
        "@types/koa2-cors": "^2.0.1",
        "@types/module-alias": "^2.0.0",
        "@types/mongodb": "^3.3.14",
        "@types/node": "^13.1.0",
        "cross-env": "^6.0.3",
        "jsonwebtoken": "^8.5.1",
        "koa": "^2.11.0",
        "koa-body": "^4.1.1",
        "koa-jwt": "^3.6.0",
        "koa-logger": "^3.2.1",
        "koa-router": "^7.4.0",
        "koa2-cors": "^2.0.6",
        "module-alias": "^2.2.2",
        "mongodb": "^3.4.1",
        "typescript": "^3.7.4"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^2.13.0",
        "@typescript-eslint/parser": "^2.13.0",
        "eslint": "^6.8.0",
        "prettier": "^1.19.1"
    }
}
